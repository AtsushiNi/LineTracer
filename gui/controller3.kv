MainScreen3:

<MainScreen3>:
    orientation: "vertical"
    padding: [5,5,5,5]

    canvas.before:
        Color:
            rgba: 0.3, 0.3, 0.3, 1
        Rectangle:
            pos: self.pos
            size: self.size

    ActionBar:
        ActionView:
            canvas.before:
                Color:
                    rgba: 0.2, 0.2, 0.2, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            ActionPrevious:
                title: "Tracer"

            ActionOverflow:
            
            ActionButton:
                text: "Start"
                color: [0,1,1,1]
                on_press: root.handle_start()
                canvas.before:
                    Color:
                        rgba: 0.1, 0.1, 0.1, 1
                    Rectangle:
                        pos: [self.pos[0]+5,self.pos[1]]
                        size: [self.size[0]-5,self.size[1]]

            ActionButton:
                text: "Stop"
                color: [0,1,1,1]
                on_press: root.handle_stop()
                canvas.before:
                    Color:
                        rgba: 0.1, 0.1, 0.1, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size

            ActionGroup:
                text: "Mode"
                ActionButton:
                    text: "test"
                    color: [0,1,1,1]
                    on_press: root.handle_mode_test()

                ActionButton:
                    text: "run"
                    color: [0,1,1,1]
                    on_press: root.handle_mode_run()

    BoxLayout:
        height: "40dp"
        size_hint_y: None
        spacing: 2
        padding: [0,2,0,2]

        TextInput:
            multiline: False
            focus: True
            size_hint_x: 70
            color: 0,1,0,1
            foreground_color: [1,1,1,1]
            background_color: [0,0,0,1]
            cursor_color: [1,1,1,1]
            on_text: app.root.handle_change(self.text.encode('utf-8'))
            on_text_validate: app.root.handle_submit('')

        Button:
            size_hint_x: 30
            text: 'submit'
            color: [0,1,1,1]
            background_color: [0, 0, 0]
            on_press: app.root.handle_submit('')

    Label:
        text: "  Graph"
        height: "40dp"
        size_hint_y: None
        text_size: self.size
        halign: "left"
        valign: "middle"
        font_size: '17px'
        canvas.before:
            Color:
                rgba: 0.1, 0.1, 0.1, 1
            Rectangle:
                pos: self.pos
                size: self.size
            Color:
                rgba: 0, 1, 1, 1
            Line:
                points: self.pos[0]+10,self.pos[1],self.pos[0]+50,self.pos[1],self.size[0]-10,self.pos[1]
                width: 2

    GraphView:
        pos_hint: {"y": 1}

