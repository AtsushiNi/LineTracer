MainScreen3:

<MainScreen3>:
    orientation: "vertical"
    padding: [5,5,5,5]
    spacing: 5

    canvas.before:
        Color:
            rgba: 0.3, 0.3, 0.3, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        height: "40dp"
        size_hint_y: None
        spacing: 5

        TextInput:
            multiline: False
            focus: True
            size_hint_x: 70
            color: 0,1,0,1
            foreground_color: [1,1,1,1]
            background_color: [0,0,0,1]
            cursor_color: [1,1,1,1]
            on_text: app.root.handle_change(self.text.encode('utf-8'))
            on_text_validate: app.root.handle_submit('')

        Button:
            size_hint_x: 30
            text: 'submit'
            background_color: [0, 0, 0]
            on_press: app.root.handle_submit('')

    GraphView:
        pos_hint: {"y": 1}
